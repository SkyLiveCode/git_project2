                  <!-- เพิ่มเครื่องมือ -->
                  <div class="card mb-4 accordion-item">
                    <h2 class="accordion-header" id="headingOne">
                      <button
                        type="button"
                        class="accordion-button collapsed"
                        data-bs-toggle="collapse"
                        data-bs-target="#accordionOne"
                        aria-expanded="false"
                        aria-controls="accordionOne"
                      >
                        <h5 class="m-2">เพิ่มข้อมูลเครื่องมือ<%= hospital.hospital_name %></h5>
                      </button>
                    </h2>
                    <div
                      id="accordionOne"
                      class="accordion-collapse collapse"
                      aria-labelledby="headingOne"
                      data-bs-parent="#accordionExample"
                    >
                      <div class="accordion-body">
                        <div class="m-2">
                          <form action="/api/addMedicalEquipment" method="post">
                            <div class="row gx-3 gy-2 align-items-center">
                              <div class="col-md-4">
                                <label class="form-label" for="id_category">EQUIPMENT</label>
                                <select id="id_category" class="form-select color-dropdown" name="id_category" required>
                                  <option value="" disabled selected>กรุณาเลือกรายการ</option>
                                    <% categories.forEach(category => { %>
                                        <option value="<%= category.id %>"><%= category.id %>. <%= category.categorie_name %> (<%= category.short_name %>)</option>
                                    <% }) %>
                                </select>
                              </div>
                              <div class="col-md-4">
                                <label class="form-label" for="id_no">ID. NO.</label>
                                <input type="text" class="form-control" id="id_no" name="id_no" placeholder="ID" required>
                                <input type="hidden" name="id_hospital" value="<%= id_hospital %>">
                              </div>
                              <div class="col-md-3">
                                <label class="form-label" for="showToastPlacement">&nbsp;</label>
                                <button type="submit" class="btn btn-primary d-block">เพิ่มเครื่องมือ</button>
                              </div>
                            </div>
                          </form>
                        </div>
                      </div>
                    </div>
                  </div>
                  <!-- / เพิ่มเครื่องมือ -->
                  
                  <!-- Search Table -->
                  <div class="row">
                    <div class="col-12 mb-4">
                      <div class="card">
                        <div class="card-header">
                          <h5 class="card-title">รายการข้อมูลเครื่องมือ<%= hospital.hospital_name %></h5>
                          <div class="input-group">
                            <input type="text" class="form-control" id="searchInput" placeholder="Search table...">
                          </div>
                        </div>
                        <div class="table-responsive text-nowrap">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th style="text-transform: none; font-size: 15px;">ID</th>
                                        <th style="text-transform: none; font-size: 15px;">Date</th>
                                        <th style="text-transform: none; font-size: 15px;">ชื่ออุปกรณ์</th>
                                        <th style="text-transform: none; font-size: 15px;">ID. No.</th>
                                        <th style="text-transform: none; font-size: 15px;">Status</th>
                                        <th style="text-transform: none; font-size: 15px;">Actions</th>
                                    </tr>
                                </thead>
                                <tbody class="table-border-bottom-0" id="tableBody">
                                    <% medicalEquipments.forEach(equipment => { %>
                                    <tr>
                                        <!-- ฟอร์มสำหรับแก้ไขข้อมูลโรงพยาบาล -->
                                        <form action="/api/updateMedicalEquipment" method="post" class="edit-form">
                                            <td><%= equipment.id %></td>
                                            <td><%= equipment.created_at_formatted %></td>  
                                            <td>
                                                <span><%= equipment.equipment_name %></span>
                                                <input class="form-control" type="text" name="equipment_name" value="<%= equipment.equipment_name %>" style="display:none;">
                                            </td>
                                            <td class="equipment-id_no">
                                                <span><%= equipment['ID. No.'] %></span>
                                                <input class="form-control" type="text" name="id_no" value="<%= equipment['ID. No.'] %>" style="display:none;">
                                            </td>
                                            <td>
                                              <% if (equipment.signaturesCompleted) { %>
                                                <a href="/html/pages-gate_equipment_by_id/<%= equipment.id %>/<%= equipment.id_hospital %>/<%= equipment.id_categories %>" class="badge bg-label-success me-1">Completed</a>
                                              <% } else { %>
                                                <a href="/html/pages-gate_equipment_by_id/<%= equipment.id %>/<%= equipment.id_hospital %>/<%= equipment.id_categories %>" class="badge bg-label-warning me-1">Pending</a>
                                              <% } %>
                                            </td>                                                                                     
                                            <td>
                                              <div class="d-inline-block">
                                                <a href="javascript:;" class="btn btn-sm btn-icon dropdown-toggle hide-arrow" data-bs-toggle="dropdown" aria-expanded="false"><i class="bx bx-dots-vertical-rounded"></i></a>
                                                <div class="dropdown-menu dropdown-menu-end m-0">
                                                  <a class="dropdown-item edit-btn" href="#"><i class="bx bx-edit-alt me-1" style="transform: translateY(-1px);"></i> แก้ไข</a>
                                                  <a class="dropdown-item confirm-edit-btn" href="#" style="display:none;"><i class="bx bx-edit-alt me-1" style="transform: translateY(-1px);"></i> ยืนยัน</a>
                                                  <div class="dropdown-divider"></div>
                                                  <a class="dropdown-item text-danger delete-btn" href="javascript:void(0);" data-action="/api/deleteMedicalEquipment" data-method="post"><i class="bx bx-trash me-1" style="transform: translateY(-2px);"></i> ลบ</a>
                                                </div>
                                              </div>
                                              <% if (equipment.id_categories == 1) { %>
                                                <a class="btn btn-sm btn-icon item-edit" href="/html/pages-calculates/pages-calculate1/<%= equipment.id %>/<%= equipment.id_hospital %>/<%= equipment.id_categories %>"><i class="bx bxs-edit"></i></a>
                                              <% } else if (equipment.id_categories == 2) { %>
                                                <a class="btn btn-sm btn-icon item-edit" href="/html/pages-calculates/pages-calculate2/<%= equipment.id %>/<%= equipment.id_hospital %>/<%= equipment.id_categories %>"><i class="bx bxs-edit"></i></a>
                                              <% } %>
                                            </td>   
                                            <input type="hidden" name="id" value="<%= equipment.id %>">
                                            <input type="hidden" name="id_hospital" value="<%= equipment.id_hospital %>">
                                            <input type="hidden" name="id_hospital" value="<%= equipment.id_categories %>">
                                        </form>
                                    </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                      </div>
                    </div>
                  </div>
                  <!--/ Search Table -->                                 
                </div>
              </div>
            </div>
